{
  "name": "create-biome",
  "version": "0.0.2",
  "bin": {
    "create-biome": "./dist/index.mjs"
  },
  "type": "module",
  "scripts": {
    "build": "tsdown src/index.ts --outDir dist --copy src/biome.template.json --copy src/editorconfig.template",
    "dev": "tsdown --watch src/index.ts --outDir dist --copy src/biome.template.json --copy src/editorconfig.template",
    "lint": "biome check .",
    "lint:fix": "biome format --write . && biome check --write ."
  },
  "files": [
    "dist/",
    "src/biome.template.json",
    "src/editorconfig.template"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@biomejs/cli-darwin-arm64": "^2.3.7",
    "@clack/prompts": "^0.11.0",
    "@types/node": "^24.10.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "tsdown": "^0.16.6",
    "typescript": "^5.6.0"
  }
}
